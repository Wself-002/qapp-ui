<template>
  <stack class="qui-indexlist">
    <list class="qui-indexlist-list" id="qui-indexlist">
      <block if="hot.length">
        <list-item type="tag" class="qui-indexlist-tag {{option.hotType==='group'?'qui-indexlist-group-tag':''}}">
          <text class="qui-indexlist-name">{{option.hotTitle}}</text>
        </list-item>
        <list-item type="hot" class="qui-indexlist-group-item {{option.showIndex?'qui-indexlist-item-showindex':''}}" if="option.hotType==='group'">
          <div for="hot" @click="click($item,'hot')">
            <text>{{$item.name}}</text>
            <text class="qui-indexlist-group-desc">{{$item.desc}}</text>
          </div>
        </list-item>
        <list-item type="item" else for="hot" @click="click($item,'hot')" class="qui-indexlist-item {{option.showIndex?'qui-indexlist-item-showindex':''}}">
          <text class="qui-indexlist-name">{{$item.name}}</text>
          <text class="qui-indexlist-desc">{{$item.desc}}</text>
        </list-item>
      </block>
      <block for="list">
        <list-item type="tag" class="qui-indexlist-tag" if="$item.tag">
          <text class="qui-indexlist-name">{{$item.tag}}</text>
        </list-item>
        <list-item type="item" class="qui-indexlist-item {{option.showIndex?'qui-indexlist-item-showindex':''}}" @click="click($item,'')">
          <text class="qui-indexlist-name">{{$item.name}}</text>
          <text class="qui-indexlist-desc">{{$item.desc}}</text>
        </list-item>
      </block>
    </list>
    <list class="qui-indexlist-sidebar" if="option.showIndex">
      <list-item type="index" for="index" @click="scrollTo($idx)">
        <text>{{$item}}</text>
      </list-item>
    </list>
  </stack>
</template>

